{
    "aaaUserEp": {
        "attributes": {
            "dn": "uni/userext"
        },
        "children": [
            {%- set comma1 = joiner(",") %}
            {%- for login_domain in apic.fabric_policies.aaa.login_domains | default([]) %}{{ comma1() }}
            {
                "aaaLoginDomain": {
                    "attributes": {
                        "annotation": "orchestrator:aac",
                        "descr": "{{ login_domain.description | default() }}",
                        "dn": "uni/userext/logindomain-{{ login_domain.name }}",
                        "name": "{{ login_domain.name }}",
                        "childAction": "deleteNonPresent"
                    },
                    "children": [
                        {
                            "aaaDomainAuth": {
                                "attributes": {
                                    "annotation": "orchestrator:aac",
                                    "dn": "uni/userext/logindomain-{{ login_domain.name }}/domainauth",
                                    {% if login_domain.realm == 'tacacs' or login_domain.realm == 'ldap' %}
                                    "providerGroup": "{{ login_domain.name }}",
                                    {% endif %}
                                    "realm": "{{ login_domain.realm }}"
                                }
                            }
                        }
                    ]
                }
            }
            {%- if login_domain.realm == 'tacacs' %},
            {
                "aaaTacacsPlusEp": {
                    "attributes": {
                        "dn": "uni/userext/tacacsext"
                    },
                    "children": [
                        {
                            "aaaTacacsPlusProviderGroup": {
                                "attributes": {
                                    "annotation": "orchestrator:aac",
                                    "dn": "uni/userext/tacacsext/tacacsplusprovidergroup-{{ login_domain.name }}",
                                    "childAction": "deleteNonPresent"
                                },
                                "children": [
                                    {%- set comma2 = joiner(",") %}
                                    {%- for prov in login_domain.tacacs_providers | default([]) %}{{ comma2() }}
                                    {
                                        "aaaProviderRef": {
                                            "attributes": {
                                                "annotation": "orchestrator:aac",
                                                "dn": "uni/userext/tacacsext/tacacsplusprovidergroup-{{ login_domain.name }}/providerref-{{ prov.hostname_ip }}",
                                                "order": "{{ prov.priority | default(defaults.apic.fabric_policies.aaa.login_domains.tacacs_providers.priority) }}",
                                                "name": "{{ prov.hostname_ip }}"
                                            }
                                        }
                                    }
                                    {%- endfor %}

                                ]
                            }
                        }
                    ]
                }
            }
            {% elif login_domain.realm == 'ldap' %},
            {
                "aaaLdapEp": {
                    "attributes": {
                        "dn": "uni/userext/ldapext"
                    },
                    "children": [
                        {
                            "aaaLdapProviderGroup": {
                                "attributes": {
                                    "annotation": "orchestrator:aac",
                                    "authChoice": "{{ login_domain.auth_choice | default(defaults.apic.fabric_policies.aaa.login_domains.auth_choice) }}",
                                    {% if login_domain.auth_choice == 'LdapGroupMap' and login_domain.ldap_group_map is defined %}
                                    "ldapGroupMapRef": "{{ login_domain.ldap_group_map }}",
                                    {% endif %}
                                    "dn": "uni/userext/ldapext/ldapprovidergroup-{{ login_domain.name }}",
                                    "childAction": "deleteNonPresent"
                                },
                                "children": [
                                    {%- set comma2 = joiner(",") %}
                                    {%- for prov in login_domain.ldap_providers | default([]) %}{{ comma2() }}
                                    {
                                        "aaaProviderRef": {
                                            "attributes": {
                                                "annotation": "orchestrator:aac",
                                                "dn": "uni/userext/ldapext/ldapprovidergroup-{{ login_domain.name }}/providerref-{{ prov.hostname_ip }}",
                                                "order": "{{ prov.priority | default(defaults.apic.fabric_policies.aaa.login_domains.ldap_providers.priority) }}",
                                                "name": "{{ prov.hostname_ip }}"
                                            }
                                        }
                                    }
                                    {%- endfor %}

                                ]
                            }
                        }
                    ]
                }
            }
            {%- endif %}
            {%- endfor %}

        ]
    }
}