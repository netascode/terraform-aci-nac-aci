{
    "ctrlrInst": {
        "attributes": {
            "dn": "uni/controller"
        },
        "children": [
            {
                "fabricSetupPol": {
                    "attributes": {
                        "dn": "uni/controller/setuppol"
                    },
                    "children": [
                        {%- set comma1 = joiner(",") %}
                        {%- for pod in apic.pod_policies.pods | default([]) %}{{ comma1() }}
                        {
                            "fabricSetupP": {
                                "attributes": {
                                    "annotation": "orchestrator:aac",
                                    "dn": "uni/controller/setuppol/setupp-{{ pod.id }}"
                                },
                                "children": [
                                    {%- set comma2 = joiner(",") %}
                                    {%- for rlpool in pod.remote_pools %}{{ comma2() }}
                                    {
                                        "fabricExtSetupP": {
                                            "attributes": {
                                                "annotation": "orchestrator:aac",
                                                "extPoolId": "{{ rlpool.id }}",
                                                "tepPool": "{{ rlpool.remote_pool }}"
                                            }
                                        }
                                    }
                                    {%- endfor %}

                                ]
                            }
                        }
                        {%- endfor %}

                    ]
                }
            }
        ]
    }
}
