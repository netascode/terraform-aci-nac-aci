{% set tenant = ((apic | default()) | json_query('tenants[?name==`' ~ item[2] ~ '`]'))[0] %}
{
    "fvTenant": {
        "attributes": {
            "dn": "uni/tn-{{ tenant.name }}",
            "name": "{{ tenant.name }}"
        },
        "children": [
            {%- set comma1 = joiner(",") %}
            {%- for sgt in tenant.services.service_graph_templates | default([]) %}{{ comma1() }}
            {% set sgt_name = sgt.name ~ defaults.apic.tenants.services.service_graph_templates.name_suffix %}
            {
                "vnsAbsGraph": {
                    "attributes": {
                        "descr": "{{ sgt.description | default() }}",
                        "dn": "uni/tn-{{ tenant.name }}/AbsGraph-{{ sgt_name }}",
                        "name": "{{ sgt_name }}",
                        "nameAlias": "{{ sgt.alias | default() }}",
                        "type": "legacy",
                        "uiTemplateType": "UNSPECIFIED",
                        "childAction": "deleteNonPresent"
                    },
                    "children": [
                        {
                            "vnsAbsTermNodeCon": {
                                "attributes": {
                                    "name": "T1",
                                    "childAction": "deleteNonPresent"
                                },
                                "children": [
                                    {
                                        "vnsOutTerm": {
                                            "attributes": {
                                            }
                                        }
                                    },
                                    {
                                        "vnsInTerm": {
                                            "attributes": {
                                            }
                                        }
                                    },
                                    {
                                        "vnsAbsTermConn": {
                                            "attributes": {
                                                "name": "1"
                                            }
                                        }
                                    }
                                ]
                            }
                        },
                        {
                            "vnsAbsTermNodeProv": {
                                "attributes": {
                                    "name": "T2",
                                    "childAction": "deleteNonPresent"
                                },
                                "children": [
                                    {
                                        "vnsOutTerm": {
                                            "attributes": {
                                            }
                                        }
                                    },
                                    {
                                        "vnsInTerm": {
                                            "attributes": {
                                            }
                                        }
                                    },
                                    {
                                        "vnsAbsTermConn": {
                                            "attributes": {
                                                "name": "1"
                                            }
                                        }
                                    }
                                ]
                            }
                        },
                        {%- set ten = sgt.device.tenant | default(tenant.name) %}
                        {%- set query = "tenants[?name==`" ~ ten ~ "`].services.l4l7_devices[?name==`" ~ sgt.device.name ~ "`]" %}
                        {%- set dev = (apic | json_query(query))[0] %}
                        {
                            "vnsAbsNode": {
                                "attributes": {
                                    "funcTemplateType": "{{ sgt.template_type | default(defaults.apic.tenants.services.service_graph_templates.template_type) }}",
                                    "funcType": "{{ dev.function | default(defaults.apic.tenants.services.l4l7_devices.function) }}",
                                    "isCopy": "{{ dev.copy_device | default(defaults.apic.tenants.services.l4l7_devices.copy_device) }}",
                                    "managed": "{{ dev.managed | default(defaults.apic.tenants.services.l4l7_devices.managed) }}",
                                    "name": "N1",
                                    "routingMode": "{{ 'Redirect' if sgt.redirect | default(defaults.apic.tenants.services.service_graph_templates.redirect) == 'enabled' else 'unspecified' }}",
                                    "sequenceNumber": "0",
                                    "shareEncap": "{{ 'yes' if sgt.share_encapsulation | default(defaults.apic.tenants.services.service_graph_templates.share_encapsulation)  == 'enabled' else 'no' }}",
                                    "childAction": "deleteNonPresent"
                                },
                                "children": [
                                    {% set dev_name = sgt.device.name  ~ defaults.apic.tenants.services.l4l7_devices.name_suffix %}
                                    {
                                        "vnsRsNodeToLDev": {
                                            "attributes": {
                                                "tDn": "uni/tn-{{ sgt.device.tenant | default(tenant.name) }}/lDevVip-{{ dev_name }}"
                                            }
                                        }
                                    },
                                    {
                                        "vnsAbsFuncConn": {
                                            "attributes": {
                                                "attNotify": "no",
                                                "name": "provider"
                                            }
                                        }
                                    },
                                    {
                                        "vnsAbsFuncConn": {
                                            "attributes": {
                                                "attNotify": "no",
                                                "name": "consumer"
                                            }
                                        }
                                    }
                                ]
                            }
                        },
                        {
                            "vnsAbsConnection": {
                                "attributes": {
                                    "adjType": "L3",
                                    "connDir": "provider",
                                    "connType": "external",
                                    "directConnect": "no",
                                    "name": "C1",
                                    "unicastRoute": "yes",
                                    "childAction": "deleteNonPresent"
                                },
                                "children": [
                                    {
                                        "vnsRsAbsConnectionConns": {
                                            "attributes": {
                                                "tDn": "uni/tn-{{ tenant.name }}/AbsGraph-{{ sgt_name }}/AbsTermNodeCon-T1/AbsTConn"
                                            }
                                        }
                                    },
                                    {
                                        "vnsRsAbsConnectionConns": {
                                            "attributes": {
                                                "tDn": "uni/tn-{{ tenant.name }}/AbsGraph-{{ sgt_name }}/AbsNode-N1/AbsFConn-consumer"
                                            }
                                        }
                                    }
                                ]
                            }
                        },
                        {
                            "vnsAbsConnection": {
                                "attributes": {
                                    "adjType": "L3",
                                    "connDir": "provider",
                                    "connType": "external",
                                    "directConnect": "no",
                                    "name": "C2",
                                    "unicastRoute": "yes",
                                    "childAction": "deleteNonPresent"
                                },
                                "children": [
                                    {
                                        "vnsRsAbsConnectionConns": {
                                            "attributes": {
                                                "tDn": "uni/tn-{{ tenant.name }}/AbsGraph-{{ sgt_name }}/AbsTermNodeProv-T2/AbsTConn"
                                            }
                                        }
                                    },
                                    {
                                        "vnsRsAbsConnectionConns": {
                                            "attributes": {
                                                "tDn": "uni/tn-{{ tenant.name }}/AbsGraph-{{ sgt_name }}/AbsNode-N1/AbsFConn-provider"
                                            }
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
            {%- endfor %}

        ]
    }
}